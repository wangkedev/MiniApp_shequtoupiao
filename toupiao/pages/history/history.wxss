/* pages/history/history.wxss */
.page-history{
  display: flex;
  flex: 1;
  flex-direction: column;
  
}
.participation{
  width: 100%;
  height: 88rpx;
  margin-top:4.5%;
  background: #FAFAFA;  
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.participation text{
  font-family: PingFang-SC-Bold;
  font-size: 28rpx;
  color: #333333;
  letter-spacing: 0;
  text-align: justify;
  line-height: 40rpx;
  padding-left: 3.7%;
}
.participation image{
  padding-right: 3.3%
}
.participation-content{
  padding: 6% 3.7% 6% 3.7%;
  display: flex;
  flex-direction: row;
  background: #FFFFFF;
  border-bottom: 1rpx solid #EBEBEB;
}
.participation-content .participation-content-state{
  background: #CCCCCC;
  border-radius: 8rpx 2rpx 8rpx 2rpx;
  width: 76rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: row;
}
.participation-content .participation-content-state text{
  font-family: PingFangSC-Regular;
  font-size: 20rpx;
  color: #FFFFFF;
  letter-spacing: 0;
  text-align: justify;
}
.participation-content .participation-content-state-text{
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #333333;
  letter-spacing: 0;
  text-align: justify;
  line-height: 40rpx;
  width: 578rpx;
  margin-left: 5.3%;  
  display: flex;
  flex-direction: column;
}
.participation-content .participation-content-state-text .text1{
  font-family: PingFangSC-Regular;
  font-size: 20rpx;
  color: #999999;
  letter-spacing: 0;
  text-align: justify;
  line-height: 28rpx;
  margin-top: 3%;
}
.scrollview{
  height: 100vh;
}
.nodata{
  padding-top: 400rpx;
  text-align: center;
  font-size: 40rpx;
}