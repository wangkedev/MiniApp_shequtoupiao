}
 
.select_box {
    background-color: #eeeeee;
    padding: 0 10rpx;
    height: 125rpx;
    width: 605rpx;
    position: absolute;
    top: 100rpx;
    z-index: 1;
    overflow: hidden;
    animation: myfirst 0.5s;
}
 
@keyframes myfirst {
    from {
        height: 0rpx;
    }
 
    to {
        height: 210rpx;
    }
}
 
.select_one {
    height: 60rpx;
    line-height: 60rpx;
